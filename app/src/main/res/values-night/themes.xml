<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MÃ©moire" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_1000</item>
        <item name="colorPrimaryVariant">@color/indigo_1000</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/indigo_900</item>
        <item name="android:textColor">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Action bar color. -->
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <item name="actionOverflowButtonStyle">@style/DotsDarkTheme</item>

        <!-- Status bar color. -->
        <!-- TODO: make it compatible with api level < 23 -->
        <!--    current min = 21 -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar color. -->
        <!-- TODO: make it compatible with api level < 27 -->
        <!--    current min = 21 -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/backgroundColor</item>
    </style>

    <style name="DotsDarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <!--  CardView style  -->
    <style name="MyCardViewStyle" parent="CardView">
        <!-- Card background color -->
        <item name="cardBackgroundColor">@color/indigo_500</item>
        <!-- Ripple for API 21 of android, and regular selector on older -->
        <item name="android:foreground">?android:selectableItemBackground</item>
        <!-- Resting Elevation from Material guidelines -->
        <item name="cardElevation">5dp</item>
        <!-- Add corner Radius -->
        <item name="cardCornerRadius">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>